<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhaomingyang.music">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_white_cube"
        android:supportsRtl="true">
        <activity
            android:name=".Start_animation"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".MainActivity"
            android:theme="@style/AppTheme1"
            android:label="@string/music_title"
            />
        <activity
            android:launchMode="singleTask"
            android:name=".VideoPage"
            android:theme="@style/AppTheme1"
            android:label="@string/video_title"
            />
        <activity
            android:launchMode="singleTask"
            android:name=".Private_information"
            android:theme="@style/AppTheme1"
            android:label="@string/private_information"
            />
    </application>

</manifest>